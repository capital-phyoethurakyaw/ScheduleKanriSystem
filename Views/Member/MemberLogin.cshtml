
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="icon" type="image/png" href="/assets/img/kaiadmin/icon_bar.PNG">
    <meta name="viewport" content="width=device-width" />
    <title>Member Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/alert.css" />
    <link rel="stylesheet" href="/css/tenantlogin.css" />
    <style>
        body {
            background-image: url('/assets/img/kaiadmin/Login_backgorund.jpg');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            color: white;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: left;
        }

        .header {
            font-size: 1.5em;
            margin-bottom: 10px;
            padding-top: 20px;
        }

        .subheader {
            padding-top: 10px;
            font-size: 1.2em;
            color: #00b7f0;
            margin-bottom: 20px;
            font-weight: bolder;
        }

        .footer {
            padding-top: 35px;
            font-size: 0.9em;
            color: #b0c4de;
        }

        .custom-input-wrapper {
            display: flex; /* Use flexbox to align items in a row */
            align-items: center; /* Vertically center the items */
            gap: 10px; /* Adds space between the icon and input */
        }

        .custom-input {
            flex: 1; /* Makes the input take up the remaining space */
        }
    </style>
</head>
<body>
  

    <div class="row login-box">
        <div class="col-6 left" style="background-color: hsl(198.89deg 71.05% 14.9%)">
            <div style="" align="center">
                <div class="header">スケジュール</div>
                <div class="subheader">管理パネル</div>
                <div class="footer" id="pnlCompanyName" style=" font-size: xxx-large"> </div>
      </div>

        </div>
        <div class="col-6 right" style="background-color:white">
            <div align="center"> 
                <div class="subheader">  ユーザーID   </div>
                <div class="custom-input-wrapper" style="padding-top:30px">
                    <i style="color:black;" class="bi bi-envelope"></i>
                    <input id="txtEmail" type="text" class="form-control form-control-sm custom-input" placeholder="Email" />
                </div>
                <div class="custom-input-wrapper" style="padding-top:30px">
                    <i style="color:black;" class="bi bi-shield-lock"></i>
                    <input  id="txtPassword" type="password" class="form-control form-control-sm custom-input" placeholder="Password" />
                </div> 
                <div class="tenant-actionbox" style="    margin-top: 10%; }">
                    <a href="/0/Tenant/HomePage" id="btnBack" class="btn btn-dark" style="margin-right:20px;width: 30%;">Cancel</a>
                    <button id="btnLogin" class="btn btn-info" style="margin-right:20px;width: 30%;">Login</button>
                     
                </div>
                
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="/js/service.js?v=@ViewBag.JsVersion"></script>
    <script src="/js/memberlogin.js?v=@ViewBag.JsVersion"></script>
   

</body>
</html>
