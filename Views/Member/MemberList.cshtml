@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/css/memberlist.css" />

<div id="divList" class="card" style="display:none;">
    <h6 class="card-header">Member List</h6>
    <div class="card-body">

        <table id="tblMember" class="table table-sm table-hover table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th style="width:50px"><input class="form-check-input" type="checkbox" id="checkAll" /></th>
                    <th>User ID / Name</th>
                    <th></th>
                    <th>Position</th>
                    <th>User Role</th>
                    <th>Register Date & Time</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div id="divEntry" class="card" style="display:none;">
    <h6 class="card-header"><span id="lblTitle">Member Registration</span></h6>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-6 d-flex align-items-center">
                <label for="txtUserID" class="w150">ID</label>
                <input type="text" class="form-control form-control-sm custom-input" id="txtUserID" readonly>
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="txtRegisterDate" class="w150">Register date</label>
                <input type="text" class="form-control form-control-sm custom-input" id="txtRegisterDate" readonly>
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="txtName" class="w150">Name</label>
                <input type="text" class="form-control form-control-sm custom-input" id="txtName">
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="txtEmail" class="w150">Email</label>
                <input type="text" class="form-control form-control-sm custom-input" id="txtEmail">
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="ddlPosition" class="w150">Position</label>
                <select id="ddlPosition" class="form-select form-select-sm custom-input">
                    <option value="owner">Owner</option>
                    <option value="manager">Manager</option>
                    <option value="staff">Staff</option>
                </select>
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="txtPassword" class="w150">Password</label>
                <input type="password" class="form-control form-control-sm custom-input" id="txtPassword">
            </div>
            <div class="col-6 d-flex align-items-center">
                <label for="txtMobileNo" class="w150">Mobile No</label>
                <input type="text" class="form-control form-control-sm custom-input" id="txtMobileNo">
            </div>
        </div>
        <div class="row">
            <div class="col-6 d-flex align-items-center">
                <label class="w150">Photo</label>
                <div class="divimage">
                    <img id="imgProfile" src="/images/default.jpeg" />
                </div>
            </div>
            <div class="col-6 d-flex align-items-center">
                <div>
                    <input type="radio" name="rdoUserRole" value="admin" id="rdoAdmin" checked />
                    <label for="rdoAdmin">Administrator</label>
                    <br />
                    <input type="radio" name="rdoUserRole" value="user" id="rdoUser" />
                    <label for="rdoUser">User</label>
                </div>
            </div>
        </div>
        <div class="row-btn mt10">
            <div class="div-leftbtn">
                <button id="btnDelete" type="button" class="btn btn-danger w100">Delete</button>
            </div>
            <div class="div-centerbtn">
                <button id="btnBack" type="button" class="btn btn-secondary w100 mr5">Back</button>
                <button id="btnSave" type="button" class="btn btn-dark w100">Register</button>
            </div>
        </div>
    </div>
</div>

<input type="file" id="fileInput" style="display: none;" accept="image/*">
<input type="hidden" id="hfMode" />
